    "@commitlint/config-conventional": "^17.0.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^27.0.6",
    "lint-staged": "^13.0.0",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
