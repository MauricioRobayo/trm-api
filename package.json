    "@commitlint/config-conventional": "^15.0.0",
    "@types/jest": "^27.0.0",
    "@types/node": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.0.6",
    "lint-staged": "^12.0.2",
