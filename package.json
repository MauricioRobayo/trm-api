  "repository": {
    "type": "git",
    "url": "git+https://github.com/MauricioRobayo/trm-api.git"
  },
  "bugs": {
    "url": "https://github.com/MauricioRobayo/trm-api/issues"
  },
  "homepage": "https://www.mauriciorobayo.com/trm-api/",
  "files": [
    "dist"
  ],
  "release": {
    "branches": [
      "main"
    ]
